<!-- New Entries -->
<div class="section-container">
    <h1 class="category-name">New Entries</h1>
    <div class="container-fluid">
        <div class="row">
            <div class="owl-carousel">
                <% newBooks.forEach(function(data) { %>
                <div class="card book">
                    <a href="/item/<%=data._id%>">
                    <img class="entry-image" src="uploads/images/<%=data.image%>" alt="">
                    <div class="card-body book-data">
                        <h5 class="card-title no-hover"><%= data.title.length > 15 ? data.title.slice(0 , 15).toUpperCase() + "..." : data.title.toUpperCase() %></h5>
                        <p class="card-text card-volume no-hover">Vol: <%= data.volume %></p>
                    </a>
                    </div>
                </div>
                <% }); %>
            </div>
        </div>
    </div>
</div>

